import 'package:flutter/material.dart';
import 'package:flutter_application_14/models/account.dart';
import 'package:flutter_application_14/services/accountservice.dart';

class AuthProvider extends ChangeNotifier {
 AccountResponse? acc;

 Future<void> Login({required String email,required String password}) async {

  acc = await AuthService.login(email, password);
 }

  Future<void> signup({required String email,required String password ,required String phone,required String name}) async {

  acc = await AuthService.signup(email, password,phone,name);
 }
}
